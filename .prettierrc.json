{
    "semi": false,
    "useTabs": false,
    "tabWidth": 4,
    "endOfLine": "lf",
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "all",
    "jsxBracketSameLine": true,
    "vueIndentScriptAndStyle": true,
    "htmlWhitespaceSensitivity": "css",

    "overrides": [
        {
            "files": "*.*",
            "options": { "tabWidth": 4 }
        },
        {
            "files": ["*.html", "*.css", "*.scss", "*.less"],
            "options": { "tabWidth": 2 }
        }
    ]
}
