{
    "semi": false,
    "useTabs": false,
    "tabWidth": 4,
    "endOfLine": "lf",
    "arrowParens": "always",
    "trailingComma": "all",
    "jsxBracketSameLine": true,
    "vueIndentScriptAndStyle": true,
    "htmlWhitespaceSensitivity": "css",

    "overrides": [
        {
            "files": ["*.html", "*.css", "*.scss", "*.less"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.json",
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
